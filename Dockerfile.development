FROM ruby:3.2

RUN apt-get update \
	&& apt-get upgrade -yq \
	&& apt-get install -y --no-install-recommends \
		postgresql-client \
	&& apt-get clean -qy \
	&& rm -rf /var/lib/apt/lists/*

RUN mkdir /app
WORKDIR /app
COPY Gemfile* /app/
RUN gem update bundler && bundle install
COPY . /app/

RUN bundle exec rake assets:precompile

CMD ["rails", "server", "-b", "0.0.0.0"]
