<h1 class="govuk-heading-xl">Find government data</h1>
<%= form_with url: data_resources_path, method: :get, "data-cy": "data-service-search-form", class: "govuk-form-group" do |form|  %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <%= render 'shared/search' %>
    </div>
  </div>
  <div class="govuk-grid-row govuk-!-margin-top-5">
    <div class="govuk-grid-column-one-third">
      <%= render 'data_resources/filters', locals: {form: form} %>
    </div>
    <div class="govuk-grid-column-two-thirds">
        <%= render 'shared/results_message' %>
      <ul class="govuk-list data-services" data-cy="data-service-organisation-list">
        <%= render partial: 'data_resource', collection: @data_resources %>
      </ul>
        <%= render 'shared/pagination_nav' %>
    </div>
  </div>
<% end -%>



