<div class="organisation-container">
  <ul class="govuk-list" data-cy="organisation-filter-list">
    <% @organisations.each do |organisation| %>
      <div class="govuk-grid-column-one-third filter-card">
        <li class="organisation-item">
          <a class="govuk-link <%=organisation.name%>-filter-link" href="<%= data_services_path(filters: organisation.id) %>" data-cy="<%= organisation.name%>-filter-link">
            <% if organisation.name == 'Department for Work and Pensions' %>
              <%= render partial: 'shared/dwp_logo', locals: { organisation: organisation }, class: "govuk-image", alt: "Department for Work and Pensions" %>
            <% elsif File.exist?("app/assets/images/#{organisation.name.gsub(' ', '_')}.png") %>
              <%= image_tag("#{organisation.name.gsub(' ', '_')}.png", class: 'govuk-image', alt: organisation.name) %>
            <% end %>
          </a>
        </li>
      </div>
    <% end %>
  </ul>
</div>