<div class="organisation-container">
  <ul class="govuk-list" data-cy="organisation-filter-list">
    <% @organisations.each do |organisation| %>
      <div class="govuk-grid-column-one-third filter-card">
        <li class="organisation-item">
          <a class="govuk-link <%=organisation.name%>-filter-link" href="<%= data_services_path(filters: organisation.id) %>" data-cy="<%= organisation.name%>-filter-link">
            <%= organisation_logo(organisation) %>
          </a>
        </li>
      </div>
    <% end %>
  </ul>
</div>